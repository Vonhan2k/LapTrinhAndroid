<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:padding="10dp"
    android:background="#72c797"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textviewThem"
        android:padding="10dp"
        android:gravity="center"
        android:textColor="#ff00"
        android:textStyle="bold"
        android:textSize="30sp"
        android:text="Thêm công việc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </TextView>

    <EditText
        android:hint="Nhập tên công việc"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/textviewThem"
        android:id="@+id/edittextTenCV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </EditText>

    <Button
        android:id="@+id/buttonThem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edittextTenCV"
        android:layout_marginLeft="180dp"
        android:layout_marginTop="20dp"
        android:text="Thêm" />

    <Button
        android:id="@+id/buttonHuy"
        android:layout_toRightOf="@+id/buttonThem"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/edittextTenCV"
        android:text="Hủy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</RelativeLayout>